<input id="nome" type="text" style="padding:50; font-size: 50px; placeholder="digite texto">
<button style="padding:70px" onclick="verificar()">Verificar</button>
<script>
    function verificar() {
        let nome = document.getElementById("nome").value;
        if (nome ==" " || nome == null) {
            let p = document.getElementById("teste");
            p.innerHTML = "O campo n√£o pode estar vazio";
            p.style.color = "red";
        }
    }
</script>
