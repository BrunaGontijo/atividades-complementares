<h1>Aprendendo javascript</h1>
<p id="teste"></p>
<br>
<input id="cor" type="text" style="padding:50px; font-size: 50px"; placeholder="digite uma cor">
<button style="padding:70px" onclick="verificarCor()">Verificar cor</button>
<script>
    function verificarCor()
    let cor= document.getElementById("cor").value;
    cor = cor.tolowerCase();
    switch (cor) {
        case "azul":
            document.body.style.backgroundColor ="blue";
            break;
            case "vermelho":
                document.body.style.backgroundColor="red";
                break;
            case "amarelo":
                document.body.style.backgroundColor="yellow";
                break
                default:
                    document.getElementById("teste").innerHTML = "nenhuma cor disponivel para: + cor;" 


    }
}
</script>
</body>
