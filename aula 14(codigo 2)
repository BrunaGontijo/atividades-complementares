<input id="cor" type="text" style="padding:50px; font-size: 50px"; placeholder="digite uma cor">
<button style="padding:70px" onclick="verificarCor()">Verificar cor</button>
<script>
    function verificarCor() {
        let x ="0";
        switch(x){
        case "0":
        document.getElementById("teste").innerHTML = "a varivel é zero";
        break;
        default:
            document.getElementById("teste").innerHTML ="não foi encontrado";
    }
}
</script>
