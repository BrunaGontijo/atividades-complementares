<h1>data</h1>
<script>
let d = new Date();
let diaMes = d.getDate();
let mes = d.getMonth() + 1
let ano = d.getFullYear();
function addZero(x){ return x<10 ? '0' + x : ''+x};

let dataPadraoBR = addZero(diaMes) + "/" + addZero(mes) + "/" + ano;
console.log(dataPadraoBR);

</script>
